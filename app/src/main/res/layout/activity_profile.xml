<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="12dp"
    tools:context=".profileActivity">

    <LinearLayout
        android:id="@+id/linearLayoutprofile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/previous_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="Cá nhân"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/grey80"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp"
        android:weightSum="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutprofile">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/baseline_person_24" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản"
                android:textColor="@color/grey40"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/grey60"
                android:gravity="center"
                android:padding="2dp">

                <ImageButton
                    android:layout_width="12dp"
                    android:layout_height="14dp"
                    android:background="@drawable/baseline_smartphone_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="84832xxx22"
                    android:textColor="@color/red80"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/borderbottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey60"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout_changepass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/grey80"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/borderbottom"

        >

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:background="@drawable/baseline_lock_open_24_changepass"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:gravity="center|left"
            android:paddingLeft="12dp"
            android:text="Đổi mật khẩu"
            android:textColor="@color/white" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/next_profile" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/borderbottom2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey60"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_changepass" />

    <LinearLayout
        android:id="@+id/linearLayout_collectTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/grey80"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/borderbottom2">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="@drawable/baseline_lock_open_24_changepass" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:gravity="center|left"
            android:paddingLeft="12dp"
            android:text="Kết nối SmartTV"
            android:textColor="@color/white" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/next_profile" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_collectTV">
        <ExpandableListView
            android:id="@+id/expand_profileservices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/grey40"
            android:scrollbars="none"
            android:dividerHeight="1dp">

        </ExpandableListView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>